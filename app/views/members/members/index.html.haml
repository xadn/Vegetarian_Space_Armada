- content_for :title do
  Members Home


%h2 Member Home
#main
  %p 
    This is the members interface for the 
    =APP_TITLE
    application.
  %p Create a powerful armada of space ships to take over the galaxy!
#sidebar
  %p sidebar
  
  
= will_paginate @destroyers
%table
  %tr
    %th Name
    %th Creator
    %th Price
    %th Description
  - for destroyer in @destroyers
    %tr
      %td= h destroyer.name
      %td= h = User.find(destroyer.creator).full_name
      %td= h destroyer.price
      %td= h truncate(destroyer.description, :length => 45)
      %td= link_to 'Show', members_destroyer_path(destroyer)
      - if current_user == destroyer.creator
        %td= link_to 'Edit', edit_members_destroyer_path(destroyer)
        %td= link_to 'Destroy', members_destroyer_path(destroyer), :confirm => 'Are you sure?', :method => :delete
      %td= h is_favorite?(destroyer)
      - form_for :favorite, :action => 'create' do |f|
        = f.hidden_field :user_id, :value => current_user.id
        = f.hidden_field :destroyer_id, :value => destroyer.id
        %td= f.submit
      
      

%p
  %b= link_to "New Destroyer", new_members_destroyer_path